		wars.url = "/wars.json/?guild_id=" + guild.id;
		await wars.fetch();

		this.$el.html(this.template_guild_history({  
			wars: wars.toJSON(),
			guilds: this.collection,
			guild: guild,
			owner: owner.toJSON(),
			is_current_user_guild,
		}));
	},
