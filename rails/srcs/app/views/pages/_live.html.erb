	    	</div>
		</div>
		  
	</div>
</script>


<script>

var current = <%== current_user.id%>;


function save_watch(host_id)
{
    var Watch = Backbone.Model.extend({
        urlRoot: '/watches'
    })
	var  watch = new Watch();
	function modify()
	{
		watch.set({hostId: host_id});
		watch.save();
		console.log("modifiÃ©");
		//setTimeout(() => {playview.render();}, 2000);

	}
    watch.fetch({data: {user_id: current}, success: modify});
}
</script>