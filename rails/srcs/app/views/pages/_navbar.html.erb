<script type="text/template" id="notif-template">
<%% if (notification.length > 0) {%>
	<span class="badge badge-light" id="notification_number"><%%= notification.length %></span>
<%% } %>
<%% if (notification.length <= 0) {%>
	<span class="badge badge-light" id="notification_number"></span>
<%% } %>

	<div class="dropdown">
		<a class="nav-link" href="#notification" id="nav_to_notif" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
			<svg width="3.4em" height="1.8em" viewBox="0 0 16 16" class="bi bi-bell-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
				<path d="M8 16a2 2 0 0 0 2-2H6a2 2 0 0 0 2 2zm.995-14.901a1 1 0 1 0-1.99 0A5.002 5.002 0 0 0 3 6c0 1.098-.5 6-2 7h14c-1.5-1-2-5.902-2-7 0-2.42-1.72-4.44-4.005-4.901z"/>
			</svg>
		</a>
		<div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
			<%%	for (let i = 0; i < notification.length; i++) { %>
				<p class="dropdown-item">
					<div class="drop" id="notif_message"><%%= notification[i].message %></div>
					<%% if (notification[i].table_type != "information") { %>
					<a class="drop" onclick='ft_accept_notif(<%%= JSON.stringify(notification[i]) %>)'><svg width="1.5em" height="1.5em" viewBox="0 0 16 16" class="bi bi-check2-circle" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
						<path fill-rule="evenodd" d="M15.354 2.646a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708 0l-3-3a.5.5 0 1 1 .708-.708L8 9.293l6.646-6.647a.5.5 0 0 1 .708 0z"/>
						<path fill-rule="evenodd" d="M8 2.5A5.5 5.5 0 1 0 13.5 8a.5.5 0 0 1 1 0 6.5 6.5 0 1 1-3.25-5.63.5.5 0 1 1-.5.865A5.472 5.472 0 0 0 8 2.5z"/>
							</svg>
					</a>
					<%% } %>
					<a class="drop" onclick='ft_refuse_notif(<%%= JSON.stringify(notification[i]) %>)'><svg width="1.4em" height="1.4em" viewBox="0 0 16 16" class="bi bi-x-circle" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
						<path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
						<path fill-rule="evenodd" d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
							</svg>
					</a>
				</p>
			<%% } %>	
		</div>
	</div>

	<%% $(".nav-item").click(function(){ %>
		<%% 	$(this).toggleClass("active"); %>
	<%% }); %>

</script>