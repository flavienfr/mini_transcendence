<script type="text/template" id="option-template">
<%= stylesheet_link_tag "style-option.css" %>

<div class="param_form">
	<form class="param_form">
		<div class="form-group">
			<label for="exampleInputEmail1">Enter a new pseudo</label>
			<input type="text" class="form-control" id="inputPseudo" placeholder="Enter pseudo">
		</div>
		<div class="form-group">
			<label for="inputFile">Select your avatar</label>
			<div class="box_upload">
				<svg width="5em" height="5em" viewBox="0 0 16 16" class="bi bi-cloud-arrow-down-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
					<path fill-rule="evenodd" d="M8 2a5.53 5.53 0 0 0-3.594 1.342c-.766.66-1.321 1.52-1.464 2.383C1.266 6.095 0 7.555 0 9.318 0 11.366 1.708 13 3.781 13h8.906C14.502 13 16 11.57 16 9.773c0-1.636-1.242-2.969-2.834-3.194C12.923 3.999 10.69 2 8 2zm2.354 6.854l-2 2a.5.5 0 0 1-.708 0l-2-2a.5.5 0 1 1 .708-.708L7.5 9.293V5.5a.5.5 0 0 1 1 0v3.793l1.146-1.147a.5.5 0 0 1 .708.708z"/>
				</svg>
				<input type="file" class="form-control-file" id="inputFile">
			</div>
		</div>
		<div class="form-group">
			<p>Secure authentification</p>
			<div class="box-auth">
				<button type="button" class="btn btn-primary btn-dark" data-toggle="modal" data-target="#modalGoogle">
					<img src="<%= image_url('google.png') %>" width="60em" height="60em" alt="" class="profil profil-photo">
				</button>
				<button type="button" class="btn btn-primary btn-dark" data-toggle="modal" data-target="#modalSms">
					<svg width="3.75em" height="3.75em" viewBox="0 0 16 16" class="bi bi-phone" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
						<path fill-rule="evenodd" d="M11 1H5a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1zM5 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H5z"/>
						<path fill-rule="evenodd" d="M8 14a1 1 0 1 0 0-2 1 1 0 0 0 0 2z"/>
					</svg>
				</button>
			</div>
		</div>
		<div class="validate-btn"> 
			<button type="button" class="btn btn-primary btn-lg btn-block btn-dark">Validate</button>
		</div>
	</form>
</div>



<!-- Google Modal -->
<div class="modal fade" id="modalGoogle" tabindex="-1" role="dialog" aria-labelledby="modalGoogle" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLabel">Google authentification</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
			    	<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				Google mon cul
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
			</div>
		</div>
	</div>
</div>

<!-- SMS Modal -->
<div class="modal fade" id="modalSms" tabindex="-1" role="dialog" aria-labelledby="modalSms" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLabel">SMS authentification</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
			    	<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				SMS ton boule...
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
			</div>
		</div>
	</div>
</div>
</script>