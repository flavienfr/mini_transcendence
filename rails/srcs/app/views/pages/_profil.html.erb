<script type="text/template" id="profil-template">
<%= stylesheet_link_tag "style-profil.css" %>

<body>

<div class="container-head">
    <div class="space1"></div>
    <div class="row1">
        <div class="elem">
            <img src="<%%= user.avatar %>" width="100" height="100" alt="" class="profil profil-photo">
            <div class="info">
                <div class="profil name"><%%= user.name %></div>
                <div class="profil ladder">Score: <%%= user.points %></div>
                <div class="profil guilde">Guild: A faire</div>
            </div>
        </div>
    </div>
</div>
<div class="body-tableau">
    <div class="title">
        <h2>Match history</h2>
    </div>
    <div class="container-tableau2">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Opponent</th>
                    <th scope="col">Score</th>
                    <th scope="col">Type</th>
                    <th scope="col"></th>
                </tr>
            </thead>
        </table>
    </div>
    <div class="container-tableau1">
        <table class="table">
            <tbody>
                <tr>
                    <td>Mark</td>
                    <td>Otto</td>
                    <td>@mdo</td>
                    <td></td>
                </tr>
                <tr>
                    <td>Jacob</td>
                    <td>Thornton</td>
                    <td>@fat</td>
                    <td></td>
                </tr>
                <tr>
                    <td>Larry</td>
                    <td>the Bird</td>
                    <td>@twitter</td>
                    <td></td>
                </tr>
                <tr>
                    <td>Larry</td>
                    <td>the Bird</td>
                    <td>@twitter</td>
                    <td></td>
                </tr>
                <tr>
                    <td>Larry</td>
                    <td>the Bird</td>
                    <td>@twitter</td>
                    <td></td>
                </tr>
                <tr>
                    <td>Larry</td>
                    <td>the Bird</td>
                    <td>@twitter</td>
                    <td></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<div class="body-tableau2">
    <div class="title">
        <h2>Friend</h2>
    </div>
    <div class="container-tableau2">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col"></th>
                </tr>
            </thead>
        </table>
    </div>
    <div class="container-tableau1">
        <table class="table">
            <tbody>
                <%%	for (let i = 0; i < friend.length; i++) { %>
                <tr>
                    <td>
                        <img src="<%%= friend[i].avatar %>" width="70" height="70" alt="" class="profil profil-photo">
                        <button class="friend_name" onclick="Backbone.history.navigate('/profil/<%%= friend[i].id %>', {trigger: true});" class="friend"><%%= friend[i].name %></button>
                        <%% if (friend[i].current_status == "online") { %>
                            <span class="badge badge-success badge_profil1" style="background: #02800d;">Online</span>
                        <%% } %>
                        <%% if (friend[i].current_status == "") { %>
                            <span class="badge badge-success status badge_profil1">Offline</span>
                        <%% } %>
                    </td>
                </tr> 
                <%% } %>
            </tbody>
        </table>
    </div>
</div>

</body>
</script>