<script type="text/template" id="war-guild-template">
	<p>SCORE: <%%= points %> </p>
	<div class="name_img_owner">
		<p>OWNER</p>
		<img src="<%= image_url('profil-photo.png') %>" width="50" height="50" alt="" class="profil profil-photo">
		<p> <%%= owner %> </p>
	</div>
	<div class="name_img_officer">
		<p>OFFICER</p>
		<%% if (officer == ""){ %>
			<p> None </p>
		<%% } else {%>
			<img src="<%= image_url('profil-photo.png') %>" width="50" height="50" alt="" class="profil profil-photo">
			<p> <%%= officer %> </p>
		<%% } %>
	</div>
</script>

