<script type="text/template" id="war-guild-template">
	<p>SCORE: <%%= guild.points %> </p>
	<div class="name_img_owner">
		<p>OWNER</p>
		<%% if (user.name == ""){ %> 
			<p> None </p>
		<%% } else {%>
			<img src="<%%= user.avatar %>" width="50" height="50" alt="" class="profil profil-photo">
			<p> <%%= user.name  %> </p>
		<%% } %>
	</div>
	<div class="name_img_officer">
		<p>OFFICER</p>
		<%% if ("" == ""){ %> <!-- replace "" by officer -->
			<p> None </p>
		<%% } else {%>
			<img src="<%= image_url('profil-photo.png') %>" width="50" height="50" alt="" class="profil profil-photo">
			<p> <%%= officer %> </p>
		<%% } %>
	</div>
</script>

<script type="text/template" id="war-template">
	<%= stylesheet_link_tag "style-war.css" %>
	
	<div class="war_container">
		<form id="create_war" class="war_pannel">
			<div class="selector">
				<select id="guild_drop_down" class="form-control form-control-md">
					<%%	for (let i = 0; i < guilds.length; i++) { %>
						<option><%%= guilds[i].name %></option>
					<%% } %>
				</select>
			</div>
			<div class="war_pannel_header">		
				<!-- Insertion of script war-guild-template -->
			</div>
			<div class="war_pannel_body">

				<div class="body_1">
					<div class="time_picker">
						<div class="selector">
							<label for="startTime">Start time</label>
							<input type="text" class="form-control" id="StartTime">
						</div>
						<div class="selector">
							<label for="finishTime">Finish time</label>
							<input type="text" class="form-control" id="FinishTime">
						</div>
					</div>
					<div class="selector">
						<label for="PrizePool">Prize pool</label>
						<input type="number" class="form-control" id="PrizePool" required>
					</div>
				</div>

				<div class="war_time">
					<h2>War Time</h2>
					<div class="time_picker">
						<div class="selector">
							<label for="guildName">Start time</label>
							<input type="text" class="form-control" id="WarStartTime">
						</div>
						<div class="selector">
							<label for="guildName">Finish time</label>
							<input type="text" class="form-control" id="WarFinishTime">
						</div>
					</div>
					<div class="selector">
						<label for="MaxUnansweredMatch">Max unanswered match</label>
						<input type="number" class="form-control" id="MaxUnansweredMatch">
					</div>
				</div>
			</div>
			<div class="war_pannel_footer">

				<div class="allGuild">
					<button id="declare_war" type="submit" class="btn btn-primary btn-md btn-block btn-dark">Declare war</button>
				</div>

			</div>
		</form>
	</div>

	
	<script>
		//#modifier pour que war time soit compris dans war 
		$("#StartTime, #FinishTime, #WarStartTime, #WarFinishTime").flatpickr({
			enableTime: true,
			time_24hr: true,
			dateFormat: "d-m-Y H:i"
		});
	</script>
</script>