		function ft_hey()
		{
			show_div = $("#direct_msg_users");
			show_div.empty();
			show_div.append("<p>Users</p>");
			<% @users.each do |user| %>//fetch users ici a la place
				<% if user.id != current_user.id %>
					show_div.append('<a class="dropdown-item" onclick="ft_clicked(<%= user.to_json %>)" href="#channel"><%= user.name %></a>');
				<% end %>
			<% end %>
			show_div.append("<p>Groups</p>");
