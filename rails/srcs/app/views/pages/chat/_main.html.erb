		function f(){
			console.log("here");
			console.log($('#text_to_send').val());
			var text = $('#text_to_send').val();
			var receiver_id = <%%= receiver ? receiver.id : 0 %>;
			if (text.length == 0 || receiver_id == 0)
			{
				console.log("empty !");
				return;
			}
			$('#text_to_send').val('');
			var form_data = new FormData();
			form_data.append("user_id", <%== current_user.id %>);
			form_data.append("text", text);
			form_data.append("scope", "private-direct");
			form_data.append("receiver_id", receiver_id);
			$.ajax({
				url: '/messages',
				data: form_data,
				processData: false,
				contentType: false,
				type: 'POST',
				success: function(){
					console.log('OK!');
				}
			});
		};
