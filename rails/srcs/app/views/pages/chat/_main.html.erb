<script type="text/template" id="chat_main-template">
	<div class="main_chat_header">
		<a id="main_chat_to_create" >
			<svg width="2.25em" height="2.25em" viewBox="0 0 16 16" class="bi bi-plus-circle-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
				<path fill-rule="evenodd" d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z"/>
			</svg>
		</a>
	<%% if (receiver.scope) {%>
	<div>
		<a id="show_chat_details" data-channel=<%%= JSON.stringify(receiver) %>>show
		</a>
	</div>
	<%% } %>
	<div class="dropdown">
		<button class="btn btn-secondary dropdown-toggle" onclick="ft_show_channels()" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><%%= receiver.name ? receiver.name : "Channels" %></button>
		<div class="dropdown-menu dropdown-menu-right" style="overflow-y:auto; height:auto; max-height: 200px;" aria-labelledby="dropdownMenuButton">
			<div id="direct_msg_users" style="overflow-y:auto">
			</div>
		</div>
	</div>
	</div>
	<div class="main_chat_middle" id="conversation_window" style="overflow-y:auto">
	</div>
	<div class="main_chat_footer">
	<div class="form-group">
		<textarea id="text_to_send" class="form-control" aria-label="With textarea"></textarea>
	</div>
	<div class="main_chat_footer_btn">
		<a id="main_chat_to_param" >
			<svg width="3.6em" height="2em" viewBox="0 0 16 16" class="bi bi-gear-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
				<path fill-rule="evenodd" d="M9.405 1.05c-.413-1.4-2.397-1.4-2.81 0l-.1.34a1.464 1.464 0 0 1-2.105.872l-.31-.17c-1.283-.698-2.686.705-1.987 1.987l.169.311c.446.82.023 1.841-.872 2.105l-.34.1c-1.4.413-1.4 2.397 0 2.81l.34.1a1.464 1.464 0 0 1 .872 2.105l-.17.31c-.698 1.283.705 2.686 1.987 1.987l.311-.169a1.464 1.464 0 0 1 2.105.872l.1.34c.413 1.4 2.397 1.4 2.81 0l.1-.34a1.464 1.464 0 0 1 2.105-.872l.31.17c1.283.698 2.686-.705 1.987-1.987l-.169-.311a1.464 1.464 0 0 1 .872-2.105l.34-.1c1.4-.413 1.4-2.397 0-2.81l-.34-.1a1.464 1.464 0 0 1-.872-2.105l.17-.31c.698-1.283-.705-2.686-1.987-1.987l-.311.169a1.464 1.464 0 0 1-2.105-.872l-.1-.34zM8 10.93a2.929 2.929 0 1 0 0-5.86 2.929 2.929 0 0 0 0 5.858z"/>
			</svg>
		</a>
		<a id="chat" >
			<button type="submit" id="post_msg" onclick="f()" class="btn btn-primary btn-dark">Send</button>
		</a>
	</div>
	</div>
	<script type="text/javascript">
		//console.log("hey" + $("#dropdownMenuButton").val());
		<%% if (receiver && receiver.name) {%>
		//if ($("#dropdownMenuButton").val().length > 0 && $("#dropdownMenuButton").val() != "Channels")
		//{
			console.log("here");
			$.ajax({
				url: '/messages',
				data: {user_id: <%== current_user.id %>, receiver_id: <%%= receiver ? receiver.id : 0 %>, scope: '<%%= receiver.scope ? receiver.scope : "direct" %>'},
				type: 'GET',
				dataType: 'json',
				success: function(data)
				{
					console.log("got");
					console.log(data);
					console.log("finish got");
					if (data && data.messages && data.messages.length > 0)
					{
						console.log("here !");
						var i = 0;
						$("#conversation_window").html("");
						while (i < data.messages.length)
						{
							console.log("a");
							//$("#conversation_window").append("<div>" + (data.messages[i].user_id == data.receiver.id ? data.receiver.name : data.user.name) + ": " + data.messages[i].text + "</div>");
							$("#conversation_window").append("<div>" + data.users[data.messages[i].user_id] + ":" + data.messages[i].text + "</div>");
							i++;
						}
					}
					else
						$("#conversation_window").html("");
				},
				error: function()
				{
					console.log("error");
				}
			});
		//}
		<%% } %>
		function ft_show_conversation(channel_or_user_selected)
		{
			//var pwd;
			if (channel_or_user_selected.scope == "protected-group")//protected
			{
				var pwd;
				$.ajax({
					url: '/channel_participations',
					data: {user_id: <%== current_user.id %>, receiver_id: channel_or_user_selected.id},
					type: 'GET',
					dataType: 'json',
					success: function(data)
					{
						console.log(data);
						console.log("got success");
						if (data.length == 0)
						{
							pwd = prompt("a password is needed");
							console.log("pwd" + pwd);
							var data = new FormData();
							data.append("user_id", <%== current_user.id %>);
							data.append("receiver_id", channel_or_user_selected.id);
							data.append("scope", channel_or_user_selected.scope);
							data.append("password", pwd);
							$.ajax({
								url: '/channel_participations',
								data: data,
								type: 'POST',
								processData: false,
								contentType: false,
								dataType: 'json',
								success: function(data)
								{
									console.log(data);
									console.log("success !!!");
									if (data.res)
										chatview.setElement("#chat_area").render_chat_main(channel_or_user_selected);
								},
								error: function(err)
								{
									console.log(err);
									console.log("error !!!");
								}
							})
						}
						else
							chatview.setElement("#chat_area").render_chat_main(channel_or_user_selected);
					},
					error: function(err)
					{
						console.log(err);
						console.log("got error");
					}
				})
				//pwd = prompt("password is needed");
				console.log("pwd" + pwd);
				return;
			}
			//public
			//console.log("pwd:" + pwd);
			console.log("clicked");
			console.log(channel_or_user_selected);
			chatview.setElement("#chat_area").render_chat_main(channel_or_user_selected);//public donc on peut afficher directe
			var data = new FormData();
			data.append("user_id", <%== current_user.id %>);
			data.append("receiver_id", channel_or_user_selected.id);
			console.log("scope:" + channel_or_user_selected.scope);
			data.append("scope", channel_or_user_selected.scope ? channel_or_user_selected.scope : "direct");
			$.ajax({
				url: 'channel_participations',
				data: data,
				type: 'POST',
				processData: false,
				contentType: false,
				success: function()
				{
					console.log("success");
				}
			})
		}
		function ft_show_channels()
		{
			$.ajax({
				url: '/channels',
				type: 'GET',
				dataType: 'json',
				success: function(data)
				{
					console.log("success");
					console.log(data);
					show_div = $("#direct_msg_users");
					show_div.empty();
					if (data.channels_in && data.channels_in.length > 0)
					{
						show_div.append("<p>Channels In</p>");
						i = 0;
						while (i < data.channels_in.length)
						{
							show_div.append("<a class='dropdown-item' onclick='ft_show_conversation(" + JSON.stringify(data.channels_in[i]) + ")' href='#channel'>" + data.channels_in[i].name + "</a>");
							i++;
						}
					}
					if (data.users && data.users.length > 0)
					{
						show_div.append("<p>Users</p>");
						i = 0;
						while (i < data.users.length)
						{
							if (<%== current_user.id %> != data.users[i].id)
								show_div.append("<a class='dropdown-item' onclick='ft_show_conversation(" + JSON.stringify(data.users[i]) + ")' href='#channel'> " + data.users[i].name + " </a>");
							i++;
						}
					}
					if (data.channels_joignable && data.channels_joignable.length > 0)
					{
						show_div.append("<p>Channels Joignable</p>");
						i = 0;
						while (i < data.channels_joignable.length)
						{
							show_div.append("<a class='dropdown-item' onclick='ft_show_conversation(" + JSON.stringify(data.channels_joignable[i]) + ")' href='#channel'>" + data.channels_joignable[i].name + "</a>");
							i++;
						}
					}
				}
			});
		}
		function f(){
			console.log("here");
			console.log($('#text_to_send').val());
			var text = $('#text_to_send').val();
			var receiver_id = <%%= receiver ? receiver.id : 0 %>;
			if (text.length == 0 || receiver_id == 0)
			{
				console.log("empty !");
				return;
			}
			$('#text_to_send').val('');
			var form_data = new FormData();
			form_data.append("user_id", <%== current_user.id %>);
			form_data.append("text", text);
			form_data.append("scope", '<%%= receiver.scope ? receiver.scope : "direct" %>');
			form_data.append("receiver_id", receiver_id);//soit direct => second user || soit le channel du groupe
			$.ajax({
				url: '/messages',
				data: form_data,
				processData: false,
				contentType: false,
				type: 'POST',
				success: function(){
					console.log('OK!');
				}
			});
		};
	</script>
</script>